<Window x:Class="SiemensPerformance.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiemensPerformance"
        mc:Ignorable="d"
        Title="Database Login" Height="223.726" Width="241.656" WindowStyle="None">
    <Grid Margin="0,0,0,0">
        <Label Content="Login to Database" HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top" Width="175" FontSize="20" FontFamily="Segoe UI Semibold"/>

        <Label x:Name="Server_Label" Content="Server" HorizontalAlignment="Left" Margin="14,49,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="server" HorizontalAlignment="Left" Height="23" Margin="82,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="localhost"/>

        <Label x:Name="Database_Label" Content="Database" HorizontalAlignment="Left" Margin="14,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="database" HorizontalAlignment="Left" Height="23" Margin="82,80,0,0" TextWrapping="Wrap" Text="mri" VerticalAlignment="Top" Width="120"/>

        <Label x:Name="Username_Password" Content="Username" HorizontalAlignment="Left" Margin="14,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.477,2.731"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" Margin="82,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Label x:Name="PasswordLabel" Content="Password" HorizontalAlignment="Left" Margin="14,143,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.477,2.731"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="82,143,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.518,-0.621" Width="120" Height="25"/>

        <Button x:Name="Connect" IsDefault="True" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="27,176,0,0" Click="Button_Click" RenderTransformOrigin="0.408,0.387"/>
        <Button x:Name="Exit" IsCancel="True" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="119,176,0,0" RenderTransformOrigin="0.534,-0.342" Click="Cancel_Click"/>
    </Grid>
</Window>
