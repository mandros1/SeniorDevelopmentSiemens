<controls:MetroWindow  x:Class="SiemensPerformance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiemensPerformance"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Import"/>
                    <MenuItem Header="_Save"/>
                    <MenuItem Header="_Save As..."/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
            <TabControl Margin="10" BorderBrush="Gainsboro">
                <TabItem Header="Log 1.log">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="51*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="337*"/>
                        </Grid.ColumnDefinitions>
                        <lvc:CartesianChart x:Name="RankGraph" Series="{Binding CPU}" Margin="334,40,83,167" Grid.Column="2">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis LabelFormatter="{Binding Formatter}"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart x:Name="RankGraph2" Series="{Binding Memory}" Margin="102,40,427,167" Grid.ColumnSpan="3">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis LabelFormatter="{Binding Formatter}"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                    </Grid>
                </TabItem>
                <TabItem Header="Log 2.log">
                    <TabControl TabStripPlacement="Left">
                        <TabItem Header="test">
                            <DataGrid Margin="95,15,316,31" Name="Info" AutoGenerateColumns="False" SelectionChanged="Info_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Field 1"  Binding="{Binding Field1}"/>
                                    <DataGridTextColumn Header="Field 2"  Binding="{Binding Field2}"/>
                                    <DataGridTextColumn Header="Field 3"  Binding="{Binding Field3}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="test2"/>
                    </TabControl>
                </TabItem>
                <TabItem Header="+">
                    <Label Content="Code run when going to this tab to open more tabs?"/>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</controls:MetroWindow>
