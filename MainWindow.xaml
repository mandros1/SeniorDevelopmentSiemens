<controls:MetroWindow  x:Class="SiemensPerformance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiemensPerformance"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Siemens Performance Logs" Height="450" Width="800" MinHeight="250" MinWidth="550">
    <Grid>
        <DockPanel>
            <TabControl x:Name="logNav" Margin="10" BorderBrush="Gainsboro" SelectionChanged="LogNav_SelectionChanged">
                <TabItem x:Name="Welcome" Header="Welcome">
                    Welcome to the Siemens MRI machine log Visualiser. To get started click the plus button on the tab bar.
                </TabItem>
                <TabItem x:Name="addTab" Header="+" ToolTip="Open a new trace file" >
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</controls:MetroWindow>
