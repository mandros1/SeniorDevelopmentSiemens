<controls:MetroWindow  x:Class="SiemensPerformance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiemensPerformance"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel></StackPanel>
            <TabControl x:Name="logNav" Margin="10" BorderBrush="Gainsboro" SelectionChanged="LogNav_SelectionChanged">
                <TabItem x:Name="exampleQuery" Header="Example Query">
                    <TabControl VerticalAlignment="Top" Margin="0,0,0,0" HorizontalAlignment="Center" TabStripPlacement="Left">
                        <TabItem Header="Query">
                            <Grid HorizontalAlignment="Left" Height="330" Margin="0,0,0,0" VerticalAlignment="Top" Width="681" >
                                <Label Content="Select:" HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top"/>
                                <ComboBox HorizontalAlignment="Left" Margin="82,10,0,0" VerticalAlignment="Top" Width="120"/>
                                <Label Content="Between:" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top"/>
                                <TextBox Height="23" TextWrapping="Wrap" Text="Timestamp1" Width="120" Margin="82,42,479,262" />
                                <TextBox Height="23" TextWrapping="Wrap" Text="Timestamp2" Width="120" Margin="264,42,297,262"/>
                                <Label Content="and" HorizontalAlignment="Left" Margin="221,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.044,0.538"/>
                                <Label Content="Where:" HorizontalAlignment="Left" Margin="21,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.477,2.731"/>
                                <ComboBox HorizontalAlignment="Left" Margin="82,77,0,0" VerticalAlignment="Top" Width="120"/>
                                <Label Content="equals" HorizontalAlignment="Left" Margin="216,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.477,2.731"/>
                                <TextBox Height="23" TextWrapping="Wrap" Text="Value" Width="120" Margin="264,77,297,227"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem x:Name="addTab" Header="+" />
            </TabControl>
        </DockPanel>
    </Grid>
</controls:MetroWindow>
